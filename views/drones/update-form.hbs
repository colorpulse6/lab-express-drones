<h2>Update the drone</h2>


<div class = "form-container">
<form action="/list/{{drones._id}}/edit" method="POST">
  <div class="form-group">
    <label for="exampleFormControlInput1">Name</label>
    <input type="text" name="name" class="form-control" id="exampleFormControlInput1" placeholder="Whatcha gunna do?" value ="{{drones.name}}">
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Description</label>
    <textarea name ="description" class="form-control" id="exampleFormControlSelect1" rows="3">
        {{drones.propellers}}
    </textarea>
  </div>
  <button type="submit" class="btn btn-dark">Save</button>
  
  
</form>

{{#if showSuccessMessage}}
    <p class ="text-success">Successfully Added</p>
{{/if}}
{{#if showFailureMessage}}
    <p class="text-danger">Something went wrong!</p>
{{/if}}
</div>